[Unit]
Description=Xray Service
Documentation=https://github.com/xtls
After=network.target nss-lookup.target

[Service]
User=root
#CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
#AmbientCapabilities=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
#NoNewPrivileges=true
ExecStart=/usr/bin/xray run -config /etc/default/layers/quantix/vless.json
ExecStartPost=/usr/bin/xray api adi --server=127.0.0.1:10002 /etc/default/layers/quantix/quantix.json
ExecStartPost=/usr/bin/xray api ado --server=127.0.0.1:10002 /etc/default/layers/quantix/outbounds.json
ExecStartPost=/usr/bin/xray api adrules --server=127.0.0.1:10002 /etc/default/layers/quantix/rules.json
Restart=on-failure
RestartPreventExitStatus=23

[Install]
WantedBy=multi-user.target
